<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_margin_6dp"
    android:elevation="4dp"
    android:gravity="center"
    android:padding="@dimen/activity_margin_5dp"
    android:translationZ="@dimen/activity_margin_0dp"
    card_view:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin_7dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCountry"
                android:layout_width="@dimen/activity_margin_0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginBottom="@dimen/activity_margin_4dp"
                android:layout_weight=".8"
                android:gravity="start|top"
                android:paddingStart="@dimen/activity_margin_3dp"
                android:text="Country"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_16sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_margin_3dp"
            android:layout_marginTop="@dimen/activity_margin_3dp"
            android:layout_marginBottom="@dimen/activity_margin_3dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/activity_margin_0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblTotalCase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="New/Total Case"
                    android:textColor="@color/color_d9a600"
                    android:textSize="@dimen/text_size_11sp" />

                <TextView
                    android:id="@+id/txtTotalCase"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_272F38"
                    android:textColorHint="@color/color_747474"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/activity_margin_0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblDeath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_margin_2dp"
                    android:paddingStart="@dimen/activity_margin_2dp"
                    android:text="New/Total Death"
                    android:textColor="@color/color_F3425D"
                    android:textSize="@dimen/text_size_11sp" />

                <TextView
                    android:id="@+id/txtDeath"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_margin_2dp"
                    android:paddingStart="@dimen/activity_margin_2dp"
                    android:textColor="@color/color_272F38"
                    android:textColorHint="@color/color_747474"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/activity_margin_0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblRecovered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_margin_2dp"
                    android:paddingStart="@dimen/activity_margin_2dp"
                    android:text="New/Total Recovered"
                    android:textColor="@color/color_0aa52f"
                    android:textSize="@dimen/text_size_11sp" />

                <TextView
                    android:id="@+id/txtRecovered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_margin_2dp"
                    android:paddingStart="@dimen/activity_margin_2dp"
                    android:textColor="@color/color_272F38"
                    android:textColorHint="@color/color_747474"
                    android:textSize="@dimen/text_size_14sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>